<div
  block:scope
  ...attributes
>
  {{#if @records}}
    {{#each @records as |record index|}}
      {{#unless index}}
        <List::Row
          @metaFields={{@metaFields}}
          @record={{record}}
          @onSelect={{this.listActions.onSelect}}
          @head={{true}}
        />
      {{/unless}}
      <List::Row
        @disabledRecords={{@disabledRecords}}
        @metaFields={{@metaFields}}
        @onSelect={{this.listActions.onSelect}}
        @record={{record}}
        @selectedRecords={{@selectedRecords}}
      />
    {{/each}}
  {{else}}
    Keine {{@modelName}} f√ºr diese Auswahl
  {{/if}}
</div>
