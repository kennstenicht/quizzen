<Ui::Window ...attributes>
  <:title>
    {{t "signIn.headline"}}
  </:title>

  <:body>
    <Ui::Form @changeset={{this.user}}
      {{on "submit" (fn this.signIn this.user)}}
      as |form|
    >
      <form.field @property="email" />
      <form.field @property="password" @type="password" />

      <Ui::Button
        @label={{t "signIn.submit"}}
        @style="primary"
        @type="submit"
      />
    </Ui::Form>
  </:body>
</Ui::Window>
