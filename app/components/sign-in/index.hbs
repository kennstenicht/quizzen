<div block:scope ...attributes>
  <h1 block:class="headline">Login to your Account</h1>
  <form
    form:scope
    {{on "submit" this.signIn}}
  >
    <div form:class="field">
      <label>
        {{t "signIn.email"}}
      </label>
      <Input
        @type="text"
        @value={{this.email}}
      />
    </div>
    <div form:class="field">
      <label>
        {{t "signIn.password"}}
      </label>
      <Input
        @type="password"
        @value={{this.password}}
      />
    </div>
    <div form:class="field">
      <Ui::Button
        @label={{t "signIn.submit"}}
        @style="primary"
        @type="submit"
      />
    </div>
  </form>
</div>

