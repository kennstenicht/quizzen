  <div layout:class="item" layout:desktop="width-2-3">
    <@form.field @property="label" />
  </div>
  <div layout:class="item" layout:desktop="width-1-6">
    <@form.field @property="answer" @type="number" />
  </div>
  <div layout:class="item" layout:desktop="width-1-6">
    <@form.field @property="unit" />
  </div>
  <div layout:class="item" layout:desktop="width-2-3">
    <@form.field @property="source" />
  </div>
  <div layout:class="item" layout:desktop="width-1-3">
    <@form.field @property="date" @type="date" />
  </div>
