<Ui::Window
  @showBottombar={{this.hasPagination}}
  ...attributes
>
  <:title>
    {{this.headline}}
  </:title>

  <:toolbar>
    <Ui::Search @updateSearch={{@updateSearch}} />
    <LinkTo @route={{this.newPath}}>New</LinkTo><br><br>
  </:toolbar>

  <:body>
    <Ui::List
      @metaFields={{@recordFields}}
      @modelName={{@modelName}}
      @onClick={{this.openRecord}}
      @records={{@records}}
    />
  </:body>

  <:bottombar>
    <Ui::Pagination @records={{@records}} @selectPage={{@selectPage}} />
  </:bottombar>
</Ui::Window>
